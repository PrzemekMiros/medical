<section class="pb-large" data-scroll-section>
    <div class="container">
        <div class="row gx-0">
            <div class="offset-md-1 col-md-10">
                <h2 class="xl fadeIn">
                    Ciekawostki i porady<span class="dot">.</span>
                </h2>
                <div class="pt-small">
                    <div class="line-x"></div>
                </div>
            </div>
        </div>
        <div class="row pt-medium">
        <div class="offset-md-1 col-md-10">
            <div class="row">
                {% for post in collections.posts.slice(0,3) %}
                    <div class="col-md-4 fadeIn mb-5 mb-md-0">
                        <a href="{{ post.url }}" title="{{ post.data.title }}">
                            <div class="portfolio-item">
                                <div class="parallax-wrap aspect_16-9">
                                    <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy" />
                                </div>
                                <p class="uppercase mb-2">
                                     <small>
                                        {{ post.data.tags }}
                                     </small>
                                </p>
                        </a>
                        <a href="{{ post.url }}" title="{{ post.data.title }}">
                            <h2 class="archive-post-title h5 mt-0 mb-1">
                                {{ post.data.title }}
                            </h2>
                        </a>
                        <p class="archive-post-desc mt-2 mb-0 d-none d-lg-block">
                            <small>
                                {{ post.data.description}}
                            </small>
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
        </div>
    </div>
</section>