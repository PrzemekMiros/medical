<section class="pb-xlarge" data-scroll-section>
    <div class="container">
        <h2 class="h1 fadeIn">
            Aktualno≈õci
        </h2>
        <div class="row gx-5 pt-small">
                    {% for post in collections.posts.slice(0,5) %}
                    <div class="col-md-6 fadeIn pb-small">
                        <div class="post-card">
                            <p class="color-accent-1 mb-2">
                                <small> 
                                    {{ post.data.date | dateDisplay}}
                                </small>
                            </p>
                            <a href="{{ post.url }}" title="{{ post.data.title }}">
                                <h2 class="archive-post-title h5 mt-3 mb-3">
                                    {{ post.data.title }}
                                </h2>
                            </a>
                            <a href="{{ post.url }}" title="Czytaj" class="link-arrow mt-3 mb-4">
                                Czytaj
                                <svg width="14" height="14" viewBox="0 0 14 14" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13 1L1 13" stroke="var(--color-dark-1)" stroke-width="1"
                                        stroke-linecap="round" stroke-linejoin="round"></path>
                                    <path d="M3 1H13V11" stroke="var(--color-dark-1)" stroke-width="1"
                                        stroke-linecap="round" stroke-linejoin="round"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                    {% endfor %}
        </div>
    </div>
</section>